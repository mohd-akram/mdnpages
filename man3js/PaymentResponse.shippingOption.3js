\f[B]const\f[R] payment = \f[B]new\f[R] PaymentRequest(supportedInstruments, details, options);

request.addEventListener(\[dq]shippingoptionchange\[dq], (evt) \f[B]=>\f[R] {
  evt.updateWith(
