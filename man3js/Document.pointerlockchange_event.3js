  \f[B]if\f[R] (document.pointerLockElement)
    console.log(\(dqThe pointer is locked to: \(dq, document.pointerLockElement);
  \f[B]else\f[R] {
    console.log(\(dqThe pointer is not locked\(dq);
  }
});
.EE
