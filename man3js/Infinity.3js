console.log(\f[B]Infinity\f[R] + 1); \f[I]/* Infinity */\f[R]
console.log(10 ** 1000); \f[I]/* Infinity */\f[R]
console.log(Math.log(0)); \f[I]/* \-Infinity */\f[R]
console.log(1 / \f[B]Infinity\f[R]); \f[I]/* 0 */\f[R]
