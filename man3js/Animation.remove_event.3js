.SS JavaScript
.IP
.EX
\f[B]const\f[R] button = document.querySelector(\(dq#start\(dq);
\f[B]let\f[R] created = 0;
\f[B]let\f[R] removed = 0;

button.addEventListener(
  \(dqclick\(dq,
  () \f[B]=>\f[R] {
    document.body.addEventListener(\(dqmousemove\(dq, (event) \f[B]=>\f[R] {
      \f[B]const\f[R] animation = button.animate(
        { transform: \(gatranslate(${event.clientX}px, ${event.clientY}px)\(ga },
        { duration: 500, fill: \(dqforwards\(dq },
      );
      created++;
      showCounts();

      \f[I]// the remove event fires after the animation is removed\f[R]
      animation.addEventListener(\(dqremove\(dq, () \f[B]=>\f[R] {
        removed++;
        showCounts();
      });
    });
  },
  { once: \f[B]true\f[R] },
);

\f[B]function\f[R] showCounts() {
  document.getElementById(\(dqcount\-created\(dq).textContent = created;
  document.getElementById(\(dqcount\-removed\(dq).textContent = removed;
}

\f[B]const\f[R] reset = document.querySelector(\(dq#reset\(dq);
reset.addEventListener(\(dqclick\(dq, () \f[B]=>\f[R] {
  document.location.reload();
});
.EE
