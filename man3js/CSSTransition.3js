  \f[B]background\-color\f[R]: #165baa;
  \f[B]color\f[R]: #fff;
  \f[B]width\f[R]: 100px;
  \f[B]height\f[R]: 100px;
  \f[B]transition\f[R]: width 4s;
}

\&.box\f[BI]:hover\f[R] {
  \f[B]width\f[R]: 200px;
}
