\f[B]let\f[R] video = document.querySelector(\[dq]video\[dq]);
\f[B]let\f[R] track = video.addTextTrack(\[dq]captions\[dq], \[dq]Captions\[dq], \[dq]en\[dq]);
track.mode = \[dq]showing\[dq];
track.addCue(\f[B]new\f[R] VTTCue(0, 0.9, \[dq]Hildy!\[dq]));
track.addCue(\f[B]new\f[R] VTTCue(1, 1.4, \[dq]How are you?\[dq]));
track.addCue(\f[B]new\f[R] VTTCue(1.5, 2.9, \[dq]Tell me, is the lord of the universe in?\[dq]));
track.addCue(\f[B]new\f[R] VTTCue(3, 4.2, \[dq]Yes, he\[aq]s in \- in a bad humor\[dq]));
track.addCue(\f[B]new\f[R] VTTCue(4.3, 6, \[dq]Somebody must\[aq]ve stolen the crown jewels\[dq]));
console.log(track.cues);
