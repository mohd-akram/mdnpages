\f[I]// HSV (1978) = H: Hue / S: Saturation / V: Value\f[R]
Color = {};
Color.HSV_RGB = (o) \f[B]=>\f[R] {
  \f[B]const\f[R] S = o.S / 100;
  \f[B]let\f[R] H = o.H / 360,
    V = o.V / 100;
  \f[B]let\f[R] R, G;
  \f[B]let\f[R] A, B, C, D;
  \f[B]if\f[R] (S === 0) {
    R = G = B = Math.round(V * 255);
  } \f[B]else\f[R] {
    \f[B]if\f[R] (H >= 1) H = 0;
    H *= 6;
    D = H \- Math.floor(H);
    A = Math.round(255 * V * (1 \- S));
    B = Math.round(255 * V * (1 \- S * D));
    C = Math.round(255 * V * (1 \- S * (1 \- D)));
    V = Math.round(255 * V);
    \f[B]switch\f[R] (Math.floor(H)) {
      \f[B]case\f[R] 0:
        R = V;
        G = C;
        B = A;
        \f[B]break\f[R];
      \f[B]case\f[R] 1:
        R = B;
        G = V;
        B = A;
        \f[B]break\f[R];
      \f[B]case\f[R] 2:
        R = A;
        G = V;
        B = C;
        \f[B]break\f[R];
      \f[B]case\f[R] 3:
        R = A;
        G = B;
        B = V;
        \f[B]break\f[R];
      \f[B]case\f[R] 4:
        R = C;
        G = A;
        B = V;
        \f[B]break\f[R];
      \f[B]case\f[R] 5:
        R = V;
        G = A;
        B = B;
        \f[B]break\f[R];
    }
  }
  \f[B]return\f[R] { R, G, B };
};

\f[B]const\f[R] createInterlace = (size, color1, color2) \f[B]=>\f[R] {
  \f[B]const\f[R] proto = document.createElement(\[dq]canvas\[dq]).getContext(\[dq]2d\[dq]);
  proto.canvas.width = size * 2;
  proto.canvas.height = size * 2;
  proto.fillStyle = color1; \f[I]// top\-left\f[R]
  proto.fillRect(0, 0, size, size);
  proto.fillStyle = color2; \f[I]// top\-right\f[R]
  proto.fillRect(size, 0, size, size);
  proto.fillStyle = color2; \f[I]// bottom\-left\f[R]
  proto.fillRect(0, size, size, size);
  proto.fillStyle = color1; \f[I]// bottom\-right\f[R]
  proto.fillRect(size, size, size, size);
  \f[B]const\f[R] pattern = proto.createPattern(proto.canvas, \[dq]repeat\[dq]);
  pattern.data = proto.canvas.toDataURL();
  \f[B]return\f[R] pattern;
};

