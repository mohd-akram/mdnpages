\f[B]const\f[R] lightMix = () \f[B]=>\f[R] {
  \f[B]const\f[R] ctx = canvas2.getContext(\[dq]2d\[dq]);
  ctx.save();
  ctx.globalCompositeOperation = \[dq]lighter\[dq];
  ctx.beginPath();
  ctx.fillStyle = \[dq]rgb(255 0 0 / 100%)\[dq];
  ctx.arc(100, 200, 100, Math.PI * 2, 0, \f[B]false\f[R]);
  ctx.fill();
  ctx.beginPath();
  ctx.fillStyle = \[dq]rgb(0 0 255 / 100%)\[dq];
  ctx.arc(220, 200, 100, Math.PI * 2, 0, \f[B]false\f[R]);
  ctx.fill();
  ctx.beginPath();
  ctx.fillStyle = \[dq]rgb(0 255 0 / 100%)\[dq];
  ctx.arc(160, 100, 100, Math.PI * 2, 0, \f[B]false\f[R]);
  ctx.fill();
  ctx.restore();
  ctx.beginPath();
  ctx.fillStyle = \[dq]#f00\[dq];
  ctx.fillRect(0, 0, 30, 30);
  ctx.fill();
};
