.SS JavaScript
.IP
.EX
\f[B]const\f[R] lock = document.querySelector(\[dq]#lock\[dq]);
\f[B]const\f[R] container = document.querySelector(\[dq]#container\[dq]);

lock.addEventListener(\[dq]click\[dq], () \f[B]=>\f[R] {
  container.requestPointerLock();
});

document.addEventListener(\[dq]pointerlockchange\[dq], () \f[B]=>\f[R] {
  \f[B]const\f[R] locked = document.pointerLockElement;
  lock.disabled = Boolean(locked);
});
.EE
