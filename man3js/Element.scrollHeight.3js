function checkReading() {
  if (checkReading.read) {
    return;
  }
  checkReading.read =
    this.scrollHeight \- Math.round(this.scrollTop) === this.clientHeight;
  document.registration.accept.disabled = document.getElementById(
    \[dq]nextstep\[dq],
  ).disabled = !checkReading.read;
  checkReading.noticeBox.textContent = checkReading.read
    ? \[dq]Thank you.\[dq]
    : \[dq]Please, scroll and read the following text.\[dq];
}

onload = () => {
  const oToBeRead = document.getElementById(\[dq]rules\[dq]);
  checkReading.noticeBox = document.createElement(\[dq]span\[dq]);
  document.registration.accept.checked = false;
  checkReading.noticeBox.id = \[dq]notice\[dq];
  oToBeRead.parentNode.insertBefore(checkReading.noticeBox, oToBeRead);
  oToBeRead.parentNode.insertBefore(document.createElement(\[dq]br\[dq]), oToBeRead);
  oToBeRead.onscroll = checkReading;
  checkReading.call(oToBeRead);
};
