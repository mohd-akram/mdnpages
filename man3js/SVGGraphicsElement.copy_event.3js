\f[B]<?xml\f[R] version=\[dq]1.0\[dq] encoding=\[dq]UTF\-8\[dq]\f[B]?>\f[R]
<\f[B]svg\f[R]
  viewBox=\[dq]0 0 100 30\[dq]
  width=\[dq]600\[dq]
  height=\[dq]320\[dq]
  xmlns=\[dq]http://www.w3.org/2000/svg\[dq]>
  <\f[B]text\f[R] x=\[dq]5\[dq] y=\[dq]10\[dq] id=\[dq]text\-to\-copy\[dq]>Copy this text</\f[B]text\f[R]>
  <\f[B]foreignObject\f[R] x=\[dq]5\[dq] y=\[dq]20\[dq] width=\[dq]90\[dq] height=\[dq]20\[dq]>
    <\f[B]input\f[R] xmlns=\[dq]http://www.w3.org/1999/xhtml\[dq] placeholder=\[dq]Paste it here\[dq] />
  </\f[B]foreignObject\f[R]>
</\f[B]svg\f[R]>
.EE
