\f[B]const\f[R] xhrButtonSuccess = document.querySelector(\[dq].xhr.success\[dq]);
\f[B]const\f[R] xhrButtonError = document.querySelector(\[dq].xhr.error\[dq]);
\f[B]const\f[R] xhrButtonAbort = document.querySelector(\[dq].xhr.abort\[dq]);
\f[B]const\f[R] log = document.querySelector(\[dq].event\-log\[dq]);

\f[B]function\f[R] handleEvent(e) {
  log.textContent = \[ga]${log.textContent}${e.type}: ${e.loaded} bytes transferred\[rs]n\[ga];
}

\f[B]function\f[R] addListeners(xhr) {
  xhr.addEventListener(\[dq]loadstart\[dq], handleEvent);
  xhr.addEventListener(\[dq]load\[dq], handleEvent);
  xhr.addEventListener(\[dq]loadend\[dq], handleEvent);
  xhr.addEventListener(\[dq]progress\[dq], handleEvent);
  xhr.addEventListener(\[dq]error\[dq], handleEvent);
  xhr.addEventListener(\[dq]abort\[dq], handleEvent);
}

\f[B]function\f[R] runXHR(url) {
  log.textContent = \[dq]\[dq];

  \f[B]const\f[R] xhr = \f[B]new\f[R] XMLHttpRequest();
  addListeners(xhr);
  xhr.open(\[dq]GET\[dq], url);
  xhr.send();
  \f[B]return\f[R] xhr;
}

