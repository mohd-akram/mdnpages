  \f[B]position\f[R]: absolute;
  \f[B]top\f[R]: 10px;
  \f[I]/* Without this, the button will be aligned to the top of the page\f[R]
\f[I]  instead of bottom of navbar when scrolled */\f[R]
  \f[B]scroll\-margin\-top\f[R]: 60px;
}
go\-to\-top {
  \f[B]position\f[R]: absolute;
  \f[B]bottom\f[R]: 10px;
  \f[B]scroll\-margin\-bottom\f[R]: 0;
}
.EE
.SS JavaScript
.IP
.EX
\f[B]const\f[R] goToTop = document.getElementById(\[dq]go\-to\-top\[dq]);
\f[B]const\f[R] goToBottom = document.getElementById(\[dq]go\-to\-bottom\[dq]);
goToBottom.addEventListener(\[dq]click\[dq], () \f[B]=>\f[R] {
  goToTop.scrollIntoView({ behavior: \[dq]instant\[dq], block: \[dq]end\[dq] });
});
goToTop.addEventListener(\[dq]click\[dq], () \f[B]=>\f[R] {
  goToBottom.scrollIntoView({ behavior: \[dq]instant\[dq], block: \[dq]start\[dq] });
});
.EE
