\f[B]const\f[R] openDialog = document.getElementById(\(dqopenDialog\(dq);
\f[B]const\f[R] dialog = document.getElementById(\(dqdialog\(dq);
\f[B]const\f[R] text = document.getElementById(\(dqdialogStatus\(dq);

\f[B]function\f[R] openCheck(dialog) {
  \f[B]if\f[R] (dialog.open) {
