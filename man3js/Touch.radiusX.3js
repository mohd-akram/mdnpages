\f[B]const\f[R] src = document.getElementById(\(dqsrc\(dq);

src.addEventListener(\(dqtouchstart\(dq, rotate);
src.addEventListener(\(dqtouchmove\(dq, rotate);
src.addEventListener(\(dqtouchend\(dq, rotate);

\f[B]function\f[R] rotate(e) {
  \f[B]const\f[R] touch = e.changedTouches.item(0);

  \f[I]// Turn off default event handling\f[R]
